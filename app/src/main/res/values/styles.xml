<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhiteTwo</item>
        <item name="colorAccent">@color/colorBlack87</item>
    </style>

    <style name="toolbarStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/colorBlack87</item>
        <item name="homeAsUpIndicator">@mipmap/ic_menu</item>
    </style>

    <style name="textViewStyleTitle1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="textViewStyleShowAll" parent="textViewStyleTitle1">
        <item name="android:textColor">@color/colorCerulean</item>
    </style>

    <style name="textViewStyleBlackTwo87">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/colorBlackTwo87</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="textViewStyle7">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="textViewStyle9">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorBlack54</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textViewStyleCardBadge">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textViewStyleCardTitle" parent="textViewStyleBlackTwo87">
        <item name="android:textColor">@color/colorBlackTwo</item>
        <item name="android:gravity">left</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:layout_marginLeft">12sp</item>
        <item name="android:layout_marginRight">12sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="circleIndicatorStyle">
        <item name="ci_animator">@animator/indicator_no_animator</item>
        <item name="ci_drawable">@drawable/orange_indicator</item>
        <item name="ci_drawable_unselected">@drawable/black_10_indicator</item>
        <item name="ci_height">6dp</item>
        <item name="ci_width">6dp</item>
    </style>

    <style name="buttonDarkSkyBlue">
        <item name="android:background">@drawable/button_dark_sky_blue</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="buttonMediumPink">
        <item name="android:background">@drawable/button_mediun_pink</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="buttonCerulean">
        <item name="android:background">@drawable/button_cerulean</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="buttonOrange">
        <item name="android:background">@drawable/button_orange</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>
